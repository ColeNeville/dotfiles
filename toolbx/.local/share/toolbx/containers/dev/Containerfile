FROM registry.fedoraproject.org/fedora-toolbox:40

# Add your custom commands here to install software or configure the container

# Utilities
RUN sudo dnf update -y && \
    sudo dnf install -y \
      direnv \
      gcc \
      git \
      htop \
      just \
      make \
      opentofu \
      stow

# Python and pip
RUN sudo dnf update -y && \
    sudo dnf install -y \
      python3 \
      python3-pip \
      python3-virtualenv

# Node and npm
RUN sudo dnf update -y && \
    sudo dnf install -y \
      nodejs

# Developer utils
RUN sudo dnf update -y && \
    sudo dnf install -y \
      neovim \
      ripgrep

RUN sudo dnf clean all

RUN pip install \
      aider-chat[chat] \
      ansible
