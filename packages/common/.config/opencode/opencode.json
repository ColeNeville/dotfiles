{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "ls *": "allow",
      "*": "ask",
    },
    "edit": "ask",
    "webfetch": "ask",
  },
  "theme": "gruvbox",
  "provider": {
    "fuelix": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "FuelIX",
      "options": {
        "baseURL": "https://api-beta.fuelix.ai/v1",
      },
      "models": {
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro"
        },
        "gemini-3-pro": {
          "name": "Gemini 3 Pro"
        },
        "gpt-5": {
          "name": "GPT-5"
        },
        "claude-sonnet-4-5": {
          "name": "Claude 4.5 Sonnet"
        },
        "llama-3.2-90b": {
          "name": "LLaMA 3.2 90B"
        }
      }
    }
  },
}
