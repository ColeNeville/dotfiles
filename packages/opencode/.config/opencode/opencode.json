{
  "$schema": "https://opencode.ai/config.json",
  "tools": {
    "bash": true,
    "edit": true,
    "write": true,
    "read": true,
    "grep": true,
    "glob": true,
    "list": true,
    "patch": true,
    "todowrite": true,
    "todoread": true,
    "webfetch": true,
  },
  "permission": {
    "bash": {
      "*": "ask",
    },
    "edit": "ask",
    "webfetch": "ask",
  },
  "provider": {
    "fuelix": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "FuelIX",
      "options": {
        "baseURL": "https://api-beta.fuelix.ai/v1",
      },
      "models": {
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro"
        }
      }
    }
  },
  "disabled_providers": [
    "opencode"
  ]
}
